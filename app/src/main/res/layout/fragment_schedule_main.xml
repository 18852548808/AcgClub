<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/swipe_refresh_schedule_main"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/layout_schedule_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:visibility="invisible"
      tools:visibility="visible">

      <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/banner_schedule"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        app:canLoop="true"
        app:open_mz_mode="true" />

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">
        <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:divider="@drawable/shape_divider_vertical"
          app:dividerPadding="10dp"
          app:showDividers="middle">

          <TextView
            android:id="@+id/tv_schedule_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_schedule_time"
            android:gravity="center"
            android:text="@string/title_schedule_new"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

          <TextView
            android:id="@+id/tv_schedule_new"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_schedule_new"
            android:gravity="center"
            android:text="本季新番"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
        </android.support.v7.widget.LinearLayoutCompat>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <TextView
            android:id="@+id/tv_recommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:text="近期推荐"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

          <View
            android:id="@+id/view_left_line_recommand"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@+id/tv_recommand"
            android:layout_alignTop="@id/tv_recommand"
            android:background="@color/colorPrimary" />

          <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_schedule_recommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_left_line_recommand"
            android:padding="8dp" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:id="@+id/tv_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:text="最近更新"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

          <View
            android:id="@+id/view_left_line_recent"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@+id/tv_recent"
            android:layout_alignTop="@id/tv_recent"
            android:background="@color/colorPrimary" />

          <!--<TextView
            android:id="@+id/tv_recent_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/tv_recent"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:gravity="bottom"
            android:text="查看更多"
            android:textSize="12sp" />-->

          <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_schedule_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_left_line_recent"
            android:padding="8dp" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>