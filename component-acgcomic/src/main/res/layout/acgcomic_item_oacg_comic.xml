<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="190dp"
  android:clipChildren="false"
  android:clipToPadding="false">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background_common_shadow"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/img_oacg_comic"
      android:layout_width="120dp"
      android:layout_height="160dp"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="bottom"
      android:padding="1dp"
      android:background="@drawable/background_round_shadow"
      android:scaleType="centerCrop" />

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_gravity="bottom"
      android:padding="8dp">

      <TextView
        android:id="@+id/tv_oacg_comic_title"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:maxLines="2"
        android:minLines="2"
        tools:text="神昭之日神昭之日神昭之日神昭之日123神昭之日神昭之日神昭之日神昭之日神昭之日" />

      <TextView
        android:id="@+id/tv_oacg_comic_painter"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/tv_oacg_comic_title"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="潜艇工作室" />

      <TextView
        android:id="@+id/tv_oacg_comic_author_divider"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignTop="@id/tv_oacg_comic_painter"
        android:layout_toRightOf="@id/tv_oacg_comic_painter"
        android:text="/" />

      <TextView
        android:id="@+id/tv_oacg_comic_script"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_oacg_comic_painter"
        android:layout_toRightOf="@id/tv_oacg_comic_author_divider"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="潜艇工作室" />


      <TextView
        android:id="@+id/tv_oacg_comic_spot"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/tv_oacg_comic_painter"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="@color/colorPrimaryDark"
        tools:text="小说改编,架空,天蚕，爱仕达，爱仕达土豆,知音" />

      <TextView
        android:id="@+id/tv_oacg_comic_desc"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/tv_oacg_comic_spot"
        android:maxLines="2"
        android:minLines="2"
        tools:text="，但却发现遭到挚友的。。背叛，打击过后被不明的生物咬到，陷入了无限的轮回之。。。" />
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>