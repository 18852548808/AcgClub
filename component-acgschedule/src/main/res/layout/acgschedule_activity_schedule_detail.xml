<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.design.widget.AppBarLayout
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:theme="@style/AppTheme.AppBarOverlay"
    tools:background="@color/colorPrimary">

    <android.support.design.widget.CollapsingToolbarLayout
      android:id="@+id/collapsing_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:contentScrim="?attr/colorPrimary"
      app:layout_scrollFlags="scroll|exitUntilCollapsed">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
          android:id="@+id/img_schedule_title_bg"
          android:layout_width="match_parent"
          android:layout_height="280dp"
          android:scaleType="centerCrop" />

        <View
          android:id="@+id/view_bg_grey"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="bottom"
          android:background="@color/grey50" />

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="8dp"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="0.1">

          <android.support.v7.widget.CardView
            android:id="@+id/img_card"
            android:layout_width="150dp"
            android:layout_height="185dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <ImageView
              android:id="@+id/img_schedule_detail_icon"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              tools:src="@mipmap/ic_launcher" />
          </android.support.v7.widget.CardView>

          <TextView
            android:id="@+id/tv_schedule_detail_label"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/img_card"
            android:maxLines="2"
            android:minLines="2"
            tools:text="标签：百合|恋爱|日常|肉番|日常|肉番" />

          <TextView
            android:id="@+id/tv_schedule_detail_proc"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_above="@id/tv_schedule_detail_label"
            android:layout_toRightOf="@id/img_card"
            tools:text="更新至 37话" />


          <TextView
            android:id="@+id/tv_schedule_detail_time"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_above="@id/tv_schedule_detail_proc"
            android:layout_toRightOf="@id/img_card"
            tools:text="年代：2016年10月" />

          <TextView
            android:id="@+id/tv_schedule_detail_area"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_above="@id/tv_schedule_detail_time"
            android:layout_toRightOf="@id/img_card"
            tools:text="地区：日本" />

        </RelativeLayout>
      </FrameLayout>

      <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_collapseMode="pin">
        <TextView
          android:id="@+id/toolbar_title"
          style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="marquee"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:marqueeRepeatLimit="marquee_forever"
          android:singleLine="true"
          tools:text="海贼王" />
      </android.support.v7.widget.Toolbar>

    </android.support.design.widget.CollapsingToolbarLayout>

  </android.support.design.widget.AppBarLayout>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/btn_schedule_detail_like"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:scaleType="center"
    android:src="@drawable/ic_heart"
    app:elevation="1dp"
    app:layout_anchor="@id/view_bg_grey"
    app:layout_anchorGravity="right"
    app:layout_scrollFlags="exitUntilCollapsed"
    app:useCompatPadding="true" />

  <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:id="@+id/tv_description"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="番剧介绍"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

          <View
            android:id="@+id/view_left_line_description"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignBottom="@+id/tv_description"
            android:layout_alignTop="@id/tv_description"
            android:background="@color/colorPrimary" />

          <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_schedule_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_left_line_description"
            expandableTextView:animDuration="200"
            expandableTextView:maxCollapsedLines="2">
            <TextView
              android:id="@id/expandable_text"
              style="@style/TextAppearance.AppCompat.Caption"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:lineSpacingMultiplier="1.4"
              tools:text="Heybot!动画全集是万代南梦宫集团与corocoro comic合作献上一个庞大的project。TV动画将于2016年秋开始播出。" />
            <ImageButton
              android:id="@id/expand_collapse"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:layout_gravity="right|bottom"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:background="@android:color/transparent" />
          </com.ms.square.android.expandabletextview.ExpandableTextView>

        </RelativeLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:id="@+id/layout_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        tools:visibility="visible">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:id="@+id/tv_episode"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="选集"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

          <View
            android:id="@+id/view_left_line_episode"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignBottom="@+id/tv_episode"
            android:layout_alignTop="@id/tv_episode"
            android:background="@color/colorPrimary" />

          <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_schedule_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_left_line_episode"
            android:padding="8dp" />
        </RelativeLayout>
      </android.support.v7.widget.CardView>
    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>