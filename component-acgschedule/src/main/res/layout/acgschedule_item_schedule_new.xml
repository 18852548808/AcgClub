<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="190dp"
  android:clipChildren="false"
  android:clipToPadding="false">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_margin="8dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background_common_shadow"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/schedule_new_img"
      android:layout_width="120dp"
      android:layout_height="170dp"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_gravity="bottom"
      android:padding="1dp"
      android:background="@drawable/background_round_shadow"
      android:scaleType="centerCrop" />

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_gravity="bottom"
      android:padding="8dp">

      <TextView
        android:id="@+id/schedule_new_title"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        tools:text="《哆啦A梦》最新一集\n大雄对静香" />

      <TextView
        android:id="@+id/schedule_new_desc"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/schedule_new_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        tools:text="看点：这里是人\n与神的世界" />

      <TextView
        android:id="@+id/schedule_new_type"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/schedule_new_desc"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="看点：这里是\n人与神的世界" />

      <TextView
        android:id="@+id/schedule_new_spot"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/schedule_new_type"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        tools:text="看点：这里是人与神的\n世界" />
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>